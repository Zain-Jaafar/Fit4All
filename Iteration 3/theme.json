{
    "defaults": 
    {
        "font": {
            "regular_path": "../Assets/Inter-Regular.ttf",
            "bold_path": "../Assets/Inter-Bold.ttf"
        },
        "colours": 
        {
            "normal_text": "black"
        },
        "misc": {
            "state_transitions":
             {
                 "normal_hovered": "1",
                 "hovered_normal": "1"
             }
        }
    },
    "button":
    {
        "colours":
        {
            "normal_text": "white",
            "hovered_text": "white",
            "active_text": "white"
        }
    },

    "text_entry_line":
    {
        "colours":
        {
            "normal_text": "#000000",
            "dark_bg": "#f0faff",
            "selected_text": "#000000",
            "selected_bg": "#f0faff",
            "text_cursor": "#000000"
        },
        "misc":
        {
            "shape": "rounded_rectangle",
            "shape_corner_radius": "10",
            "padding": "10,0"
        }
    },
    "text_box":
    {
        "colours":
        {
            "dark_bg": "#FFFFFF",
            "normal_border": "#d3dbdf"
        },
        "misc":
        {
            "shape": "rounded_rectangle",
            "shape_corner_radius": "10",
            "line_spacing": "1",
            "border_width": "1",
            "shadow_width": "0"
        }
    },
    "label":
    {
        "misc":
        {
            "text_vert_alignment": "top",
            "text_horiz_alignment": "left"
        }
    },
    "@loading_label": {
        "misc": {
            "text_horiz_alignment": "center"
        }
    },
    "@exercise_name": {
        "font": {
            "bold": "1"
        }
    },
    "@exercise_button": {
        "colours": {
            "normal_bg": "#fafafa",
            "normal_text": "black",
            "normal_border": "#fafafa",
            "hovered_bg": "#dddddd",
            "hovered_text": "black",
            "hovered_border": "#dddddd",
            "active_bg": "#cccccc",
            "active_text": "black",
            "active_border": "#cccccc"
        },
        "misc": {
            "shape": "rounded_rectangle",
            "shape_corner_radius": "4",
            "border_width": "0"
        }
    },
    "@regular_button": {
        "colours": {
            "normal_bg": "#2b39ff",
            "hovered_bg": "#2835e8",
            "active_bg": "#2530d2"
        },
        "misc": {
            "shape": "rounded_rectangle",
            "shape_corner_radius": "10",
            "border_width": "0"
        }
    }
}